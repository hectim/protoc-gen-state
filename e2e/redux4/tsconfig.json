{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "es2016", "es2017"],
    "types": ["node"],
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictFunctionTypes": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "*": [
        "*",
        "node_modules/*"
      ],
      "proto/*": [
        "protos/*"
      ],
      "@App/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "protos/**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
